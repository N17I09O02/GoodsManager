@model Web_Manage.Models.NguyenLieu

@{
    ViewData["Title"] = "Thêm nguyên liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm nguyên liệu mới</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="TenNguyenLieu"></label>
        <input asp-for="TenNguyenLieu" class="form-control" />
        <span asp-validation-for="TenNguyenLieu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonViTinh">Đơn vị tính</label>
        <select asp-for="DonViTinh" class="form-control">
            <option value="1">Kg</option>
            <option value="2">Bao</option>
            <option value="3">Thùng</option>
        </select>
        <span asp-validation-for="DonViTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu">Ghi chú</label>
        <input asp-for="GhiChu" type="text" class="form-control" />
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Tạo nguyên liệu</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>


